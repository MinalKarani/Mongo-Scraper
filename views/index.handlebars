      <div class="jumbotron text-center">
		<h1>Mongo Scraper</h1>
	</div>
      
   {{#if isArticle}}
   <script type="text/javascript">
        $(function () {
            $("#mainPg").css("display","none");
        });
    </script>
	{{#each data}}

	<div class="card">
		<div class="card-header">
			<h5>
				<a class="article-link" target="_blank" rel="noopener noreferrer" href='https://www.nytimes.com{{link}}'>{{title}}</a>

			     	<button class="save" type="button"  attrId ={{_id}}>Save</button>
                 
			</h5>

		</div>
		<div class="card-body">
			<p class="card-text">{{summary}}</p>

		</div>
	</div>


	{{/each}}
      
    {{/if}}
      <div id="mainPg">
                  <p>Oh, Looks like we dont have any new articles.</p>
      </div>

  <div id="scrapeModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"> &times;</button>
        </div>

        <div class="modal-body">
         <h4>Scrape Complete</h4>
        </div>

        <div class="modal-footer">
          <button type="button" class="close" data-dismiss="modal">Ok</button>
        </div>
      </div>
    </div>
  </div>
</div>
